Preamble
    \usepackage[headings]{DJespcrc1}
EndPreamble

Format 11
Input stdclass.inc

SecNumDepth             3
TocDepth                3

NoStyle Chapter
NoStyle Chapter*


Style Part
    Align                 Left
    AlignPossible         Left
    TopSep                2
    BottomSep             1.5
    Font
      Size                Larger
    EndFont
End


Style Part*
    Align                 Left
    AlignPossible         Left
    TopSep                2
    BottomSep             1.5
    Font
      Size                Larger
    EndFont
End


Style Title
	Margin                Static
	LatexType             Command
	InTitle               1
	LatexName             title
	ParSkip               0.4
	ItemSep               0
	TopSep                0
	BottomSep             1
	ParSep                1
	Align                 Left
	AlignPossible         Left
	LabelType             No_Label
	Font
	  Size                Largest
	  Color               Blue
	EndFont
End


Style Author
	Margin                Static
	LatexType             Command
	InTitle               1
	LatexName             author
	LabelSep              xxx
	ParSkip               0.4
	TopSep                1.3
	BottomSep             0.7
	ParSep                0.7
	Align                 Left
	AlignPossible         Left
	LabelType             No_Label
	Font
	  Size                Large
	  Color               Blue
	EndFont
End


Style DJAuthor
	Margin                Dynamic
	LatexType             Command
	InTitle               1
	LatexName             author
	ParSkip               0.4
	TopSep                1.3
	BottomSep             0.7
	ParSep                0.7
	Align                 Left
	AlignPossible         Left
	LabelType             Static
	LabelString           "Dazhi Jiang@"
	LabelFont
	  Family              Roman
	  Series              Bold
	  Size                Large
	  Color               Blue
	EndFont
	Font
	  Size                Large
	  Color               Blue
	EndFont
End


Style RunTitle
	Margin                Right_Address_Box
	LatexType             Command
	LatexName             runtitle
	ParSkip               0.4
	BottomSep             0.5
	ParSep                1.5
	Align                 Left
	AlignPossible         Left
	LabelType             Static
	LabelString           "(runtitle): "
	LabelFont
	  Family              Roman
	  Series              Bold
	  Size                 Normal
	  Color               Blue
	EndFont
	Font
	  Size                Normal
	  Color               Blue
	EndFont
End


Style RunAuthor
	Margin                Right_Address_Box
	LatexType             Command
	LatexName             runauthor
	ParSkip               0.4
	BottomSep             0.5
	ParSep                1.5
	Align                 Left
	AlignPossible         Left
	LabelType             Static
	LabelString           "(runauthor): "
	LabelFont
	  Family              Roman
	  Series              Bold
	  Size                 Normal
	  Color               Blue
	EndFont
	Font
	  Size                Normal
	  Color               Blue
	EndFont
End


Style Abstract
	Margin                Static
	LatexType             Environment
	LatexName             abstract
	NextNoIndent          1
	LeftMargin            MMM
	RightMargin           MMM
	ParIndent             MM
	ItemSep               0
	TopSep                0.7
	BottomSep             0.7
	ParSep                0
	Align                 Block
	AlignPossible         Block, Left, Right, Center
	LabelType             Top_Environment
	LabelString           "Summary"
	LabelBottomSep    0.5
	Font
	  Size                Small
	EndFont
	LabelFont
	  Series              Bold
	  Size                Large
	  Color               Blue
	EndFont
End
